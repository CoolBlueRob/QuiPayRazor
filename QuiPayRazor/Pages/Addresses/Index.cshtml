@page
@model QuiPayRazor.Pages.Addresses.IndexModel

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-page="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Address[0].AddressType)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Address[0].Address1)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Address[0].Address2)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Address[0].Address3)
            </th>
            <th>
                <a asp-page="./Index" asp-route-sortOrder="@Model.CitySort">
                    @Html.DisplayNameFor(model => model.Address[0].City)
                </a>
            </th>
            <th>
                <a asp-page="./Index" asp-route-sortOrder="@Model.StateSort">
                    @Html.DisplayNameFor(model => model.Address[0].State)
                </a>
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Address[0].CountryCode)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Address[0].ZipCode)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Address[0].WhenCreated)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Address[0].MemberIdentity)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.Address) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.AddressType)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Address1)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Address2)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Address3)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.City)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.State)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CountryCode)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ZipCode)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.WhenCreated)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.MemberIdentity.ID)
            </td>
            <td>
                <a asp-page="./Edit" asp-route-id="@item.ID">Edit</a> |
                <a asp-page="./Details" asp-route-id="@item.ID">Details</a> |
                <a asp-page="./Delete" asp-route-id="@item.ID">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
