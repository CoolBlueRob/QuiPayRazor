                <label asp-for="EmailAddress.MemberIdentityID" class="control-label"></label>
                <select asp-for="EmailAddress.MemberIdentityID" class="form-control" asp-items="ViewBag.MemberIdentityID"></select>
                <span asp-validation-for="EmailAddress.MemberIdentityID" class="text-danger"></span>
            </div>
