@page "{memberId:int}"
@model QuiPayRazor.Pages.Seller.PaymentsInModel
@{
}

<h1>Payments In</h1>

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Member.Accounts.Single().PaymentsIn.Single().FromAccount.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Member.Accounts.Single().PaymentsIn.Single().Item )
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Member.Accounts.Single().PaymentsIn.Single().Quantity)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Member.Accounts.Single().PaymentsIn.Single().Amount)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Member.Accounts.Single().PaymentsIn.Single().BuyersComment)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Member.Accounts.Single().PaymentsIn.Single().SellersComment)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var account in Model.Member.Accounts)
        {
            <tr>
                <td colspan="6">Name: @Html.DisplayFor(x => account.Name)</td>
            </tr>
            @foreach( var paymentIn in account.PaymentsIn)
            {
                <tr>
                    <td>@Html.DisplayFor(x => paymentIn.FromAccount.Name)</td>
                    <td>@Html.DisplayFor(x => paymentIn.Item)</td>
                    <td>@Html.DisplayFor(x => paymentIn.Quantity)</td>
                    <td>@Html.DisplayFor(x => paymentIn.Amount)</td>
                    <td>@Html.DisplayFor(x => paymentIn.BuyersComment)</td>
                    <td>@Html.DisplayFor(x => paymentIn.SellersComment)</td>
                </tr>
            }
        }

    </tbody>
</table>
