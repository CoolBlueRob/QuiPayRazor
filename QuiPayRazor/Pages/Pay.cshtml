@page "{payee:int}"
@model QuiPayRazor.Pages.PayModel
@{
    ViewData["Title"] = "Pay";
}

<h1>Pay</h1>
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="form-group">
                <label asp-for="PayViewModel.FromAccountID" class="control-label"></label>
                <input asp-for="PayViewModel.FromAccountID" class="form-control" />
                <span asp-validation-for="PayViewModel.FromAccountID" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="PayViewModel.ToAccountID" class="control-label"></label>
                <input asp-for="PayViewModel.ToAccountID" class="form-control" />
                <span asp-validation-for="PayViewModel.ToAccountID" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="PayViewModel.Amount" class="control-label"></label>
                <input asp-for="PayViewModel.Amount" class="form-control" />
                <span asp-validation-for="PayViewModel.Amount" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="PayViewModel.Quantity" class="control-label"></label>
                <input asp-for="PayViewModel.Quantity" class="form-control" />
                <span asp-validation-for="PayViewModel.Quantity" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="PayViewModel.Item" class="control-label"></label>
                <input asp-for="PayViewModel.Item" class="form-control" />
                <span asp-validation-for="PayViewModel.Item" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="PayViewModel.BuyersComment" class="control-label"></label>
                <input asp-for="PayViewModel.BuyersComment" class="form-control" />
                <span asp-validation-for="PayViewModel.BuyersComment" class="text-danger"></span>
            </div>

            @*<div class="form-group">
                <label asp-for="PayViewModel.WhereOffered" class="control-label"></label>
                <input asp-for="PayViewModel.WhereOffered" class="form-control" />
                <span asp-validation-for="PayViewModel.WhereOffered" class="text-danger"></span>
            </div>*@

            <div class="form-group">
                <input type="submit" value="Pay" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}