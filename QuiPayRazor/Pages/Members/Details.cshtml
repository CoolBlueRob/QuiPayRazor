@page
@model QuiPayRazor.Pages.Members.DetailsModel

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div>
    <h4>Member</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Member.MemberState)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Member.MemberState)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Member.WhenCreated)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Member.WhenCreated)
        </dd>

        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Member.MemberIdentitys)
        </dt>
        <dd class="col-sm-10">
            <table class="table">
                <tr>
                    <th>Title</th>
                    <th>First Name</th>
                    <th>Last Name</th>
                </tr>
                @foreach (var item in Model.Member.MemberIdentitys)
                {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Title)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.FirstName)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.LastName)
                    </td>
                </tr>
                }
            </table>
        </dd>
    </dl>
</div>
<div>
    <a asp-page="./Edit" asp-route-id="@Model.Member.ID">Edit</a> |
    <a asp-page="./Index">Back to List</a>
</div>
